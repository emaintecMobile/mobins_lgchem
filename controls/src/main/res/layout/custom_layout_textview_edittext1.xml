<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:minHeight="40dp"
        android:background="@drawable/modify_selector_list_item_03"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:gravity="start|center_vertical"
            android:text="타이틀"
            android:textColor="@color/selector_textview"
            android:textSize="14sp"
            tools:ignore="HardcodedText"/>
    <com.emaintec.lib.ctrl.EditTextDialog
            android:id="@+id/editTextDialog"
            style="@style/CustomEditText_Large"
            android:layout_width="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLength="400"
            android:maxLines="1"
            android:text="EditTextDialog"
            android:textAlignment="textEnd"
            tools:ignore="HardcodedText,RtlCompat"/>
</LinearLayout>
