<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f8fa"
    android:orientation="vertical">
    <com.emaintec.controls.CustomLayout_TextView_Close
        android:id = "@+id/customLayout_Title"
        style="@style/CustomLayout_Default"
        android:background="@color/colorAccent"
        android:layout_height="40dp"
        app:leftTextView_Text="점검항목"
        tools:ignore="MissingConstraints" />
    <FrameLayout
        android:id="@+id/layout_Top"
        app:layout_constraintTop_toBottomOf="@+id/customLayout_Title"
        android:background="@color/colorSearchBackgroud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="left|center_vertical"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/textSearch"
                        android:text="EQUIP_NO" />

                    <ImageButton
                        style="@style/button_Icon"
                        android:visibility="gone"
                        android:id="@+id/button_Info"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:src="@mipmap/icon_dtl"
                     />

                    <ImageButton
                        style="@style/button_Icon"
                        android:id="@+id/button_Chart"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:src="@mipmap/icon_chart" />

                    <ImageButton
                        android:id="@+id/button_Scan"
                        style="@style/button_Icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:src="@mipmap/icon_qr"
                      />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView_02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:padding="5dp"
                    android:textColor="@color/textSearch"
                    android:text="EQUIP_NM" />


            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_Photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/bts_rectangle_white_gray_round"
        android:orientation="vertical"
        android:padding="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/layout_Scroll"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_Top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 및 동영상" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" />

        </LinearLayout>
    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/layout_Scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout_Bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_Top">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:padding="2dp"
            tools:listitem="@layout/ck_result_dtl_list" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/linearLayout_Bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="#a8a8a8"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_Prev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button_gray"
            android:textColor="@color/btnNextPreTxt"
            android:textStyle="bold"
            android:padding="4dp"
            android:layout_margin="1dp"
            android:text="이전" />



        <androidx.appcompat.widget.AppCompatButton
            android:visibility="gone"
            android:id="@+id/button_Flash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button_gray"
            android:padding="4dp"
            android:text="손전등" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_Next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button_gray"
            android:textColor="@color/btnNextPreTxt"
            android:textStyle="bold"
            android:padding="4dp"
            android:layout_margin="1dp"
            android:text="다음" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_Save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_weight="2"
            android:textColor="@color/btnTextSave"
            android:background="@drawable/selector_button_save"
            android:padding="4dp"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:text="저장" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
